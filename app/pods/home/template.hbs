<table>
  <thead>
    <th>Nome</th>
    <th>Decrição</th>
    <th>Foto</th>
    <th>Ação</th>
  </thead>
  <tbody>
    {{#each model as |hero|}}
      <tr>
        <td>{{hero.name}}</td>
        <td>{{hero.description}}</td>
        <td><img src={{hero.photo}} alt="" width="100" heigth="100"></td>
        <td>
          <a {{action 'destroy' hero}} href="#">Excluir</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
